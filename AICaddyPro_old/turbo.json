{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["EXPO_PUBLIC_*"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    },
    "start": {
      "cache": false,
      "dependsOn": ["build"],
      "inputs": ["$TURBO_DEFAULT$"]
    }
  }
}
